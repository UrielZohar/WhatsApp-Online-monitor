{
  "manifest_version": 3,
  "name": "WhatsApp - Online Monitor",
  "description": "Get a notification once the user is online",
  "version": "1.01",
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "html/popup.html"
  }
}
